mixin range-input(className, idMin, idMax, nameMin, nameMax, minLength, maxLength, currentMinValue, currentMaxValue)
  div(class=`${className}__range-wrapper`)
    div(class=`${className}__range-scale`)
      div(class=`${className}__range-bar`)
        +btn({type: "button"})(class=`${className}__range-toggle ${className}__range-toggle--min`, aria-label="Установить минимальный левел.")
        +btn({type: "button"})(class=`${className}__range-toggle ${className}__range-toggle--max`, aria-label="Установить максимальный левел.")
    div(class=`${className}__range-inputs`)
      +custom-input({inputType: "number", inputId: idMin, inputName: nameMin, inputValue: currentMinValue, inputMinLength: minLength, inputMaxLength: maxLength})(aria-label="Поле ввода минимального левела.")
      +custom-input({inputType: "number", inputId: idMax, inputName: nameMax, inputValue: currentMaxValue, inputMinLength: minLength, inputMaxLength: maxLength})(aria-label="Поле ввода максимального левела.")
