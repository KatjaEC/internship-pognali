  //- -
  //-   const filters = [["Европа"], ["Азия"], ["Америка"], ["Острова"]]
  -
    const filters = [
      {
        filterName: "Европа",
        id: "europe",
        attribute: "checked",
      },
      {
        filterName: "Азия",
        id: "asia",
        attribute: "",
      },
      {
        filterName: "Америка",
        id: "america",
        attribute: "",
      },
      {
        filterName: "Острова",
        id: "islands",
        attribute: "",
      },
    ]

  section.filters
    .container
      .filters__wrapper
        .filters__header
          +icon("icon-filters", 23, 15)
          p Фильтрация по странам:
          ul.filters__list
            each item in filters
              li.filters__item
                if(item.attribute)
                  +filter-checkbox("filters", item.filterName, item.id, item.id)(checked)
                else
                  +filter-checkbox("filters", item.filterName, item.id, item.id)
        .filters__countries-wrapper
          ul.filters__countries-list
            each item in countriesList
              li.filters__countries-item
                p!= item.letter
                .filters__countries-group
                  each country in item.countries
                    a.filters__countries-link(href="#")!= country
          .filters__button-wrapper
            +btn({type: "button", text: "Свернуть"})(class="filters__link")
              +icon("icon-close", 22, 24)
