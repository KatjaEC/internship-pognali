    const filters = [
      {
        filterName: "Европа",
        id: "europe",
        attribute: "checked",
      },
      {
        filterName: "Азия",
        id: "asia",
        attribute: "",
      },
      {
        filterName: "Америка",
        id: "america",
        attribute: "",
      },
      {
        filterName: "Острова",
        id: "islands",
        attribute: "",
      },
    ]

  section.filters
    +page-title("Попутчики")
    .filters__wrapper
      .container
        .filters__options-wrapper.filters__options-wrapper--list-is-hidden
          p
            span.filters__icon
              +icon("icon-filters", 23, 15)
            | Фильтрация по странам:
          .filters__list-wrapper
            ul.filters__list
              each item in filters
                li.filters__item(class=`filters__item--${item.id}`, data-tab-id=item.id)
                  if(item.attribute)
                    +filter-checkbox("filters", item.filterName, item.id, item.id)(checked="true")
                  else
                    +filter-checkbox("filters", item.filterName, item.id, item.id)
          .filters__options-button-wrapper
            +btn({type: "button"})(class="filters__options-button", aria-label="Показать-скрыть фильтры по странам.")
              span.filters__options-button-text Показать все
              span.filters__options-button-icon.filters__options-button-icon--is-shown
                +icon("icon-close-bold", 22, 24)
              span.filters__options-button-icon.filters__options-button-icon--is-hidden
                +icon("icon-dots-button", 34, 6)
          .filters__countries-wrapper
            ol.filters__countries-list
              each item in countriesList
                if(item.modsActiveClass)
                  li.filters__countries-item(class=`filters__countries-item${item.mods} filters__countries-item${item.modsActiveClass}`)
                    p!= item.letter
                    .filters__countries-group
                      each country in item.countries
                        a.filters__countries-link(href="#", data-country-category=country.category)!= country.name
                else
                  li.filters__countries-item(class=`filters__countries-item${item.mods}`)
                    p!= item.letter
                    .filters__countries-group
                      each country in item.countries
                        a.filters__countries-link(href="#", data-country-category=country.category)!= country.name
            .filters__button-wrapper
              +btn({type: "button"})(class="filters__button")
                span.filters__button-text Свернуть
                span.filters__button-icon
                  +icon("icon-close-bold", 22, 24)
