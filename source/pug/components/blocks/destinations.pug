mixin destinations()
  -
    const destinationsList = [
      {
        name: "Таиланд",
        text: "Джунгли зовут!",
        image: "countries-thailand",
        flagIcon: "flag-thailand",
        usersNumber: "18321",
        altText: "Вид на пляж в Таиланде сверху.",
      },
      {
        name: "Франция",
        text: "Трэ бьен, манифик!",
        image: "countries-france",
        flagIcon: "flag-france",
        usersNumber: "12518",
        altText: "Вид на улицу во Франции.",
      },
      {
        name: "Чехия",
        text: "Закоулки старой Европы",
        image: "countries-czech",
        flagIcon: "flag-czechia",
        usersNumber: "5326",
        altText: "Вид на город в Чехии.",
      },
    ]

  section.destinations
    .container
      .destinations__wrapper
        .destinations__text
          h2 Направления
          p
            | Мы не продаем туры и ничего не рекламируем.
          p
            | Люди сами пишут о странах, куда хотели бы отправиться и чем можно там заняться.
        .destinations__button-wrapper
          +btn({href: "catalog.html", text: "Показать все"})(class="destinations__button")
            +icon("arrow-filled", 14, 14)
        .destinations__slider-wrapper
          ul.destinations__slider-list
            each item in destinationsList
              li.destinations__slider-item
                .destinations__slider-item-content
                  h3!= item.name
                  p!= item.text
                  .destinations__slider-item-stats
                    +icon("icon-user", 20, 20)
                    span!= item.usersNumber
                .destinations__slider-images
                  .destinations__slider-flag-image
                    +picture("content", item.flagIcon, "jpg", 70, 47, "Флаг страны.")
                  .destinations__slider-photo
                    +picture-semi-adaptive("slides", item.image, "jpg", 203, 140, 270, 110, item.altText)
