                +transportation-icon("catalog", "icon-bicycle", 25, 25, "Велосипед")
              li.catalog__transportation-item.catalog__transportation-item--on-foot(data-status=item.transport[3].statusAttr)
                +transportation-icon("catalog", "icon-run", 22, 24, "Пешком")
