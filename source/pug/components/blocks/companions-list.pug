                  +transportation-icon("companions", "icon-bicycle", 25, 25, "Велосипед")
                li.companions__transportation-item.companions__transportation-item--on-foot(data-status=item.transport[3].statusAttr)
                  +transportation-icon("companions", "icon-run", 22, 24, "Пешком")
  else
    ul.catalog__cards-list
      each item of companionsList
        li.catalog__cards-item(class=`catalog__cards-item${item.availabilityMods}`)
          +companion-card(item.name, item.image, item.level, item.statusMods, item.flags, item.tags, item.likesNumber)
            ul.catalog__transportation-list
              li.catalog__transportation-item.catalog__transportation-item--plane(data-status=item.transport[0].statusAttr)
                +transportation-icon("catalog", "icon-plane", 23, 22, "Авиаперелет")
              li.catalog__transportation-item.catalog__transportation-item--car(data-status=item.transport[1].statusAttr)
                +transportation-icon("catalog", "icon-bus", 18, 20, "Автотранспорт")
