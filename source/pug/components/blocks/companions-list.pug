  if(currentUrl === "index.html")
    - const activeCards = [companionsList[0], companionsList[1]]
      ul.companions__cards-list
        each item of activeCards
          li.companions__cards-item
            +companion-card(item.name, item.image, item.level, item.statusMods, item.flags, item.tags)
              ul.companions__transportation-list
                li.companions__transportation-item.companions__transportation-item--plane(data-status=item.transport[0].statusAttr)
                  +transportation-icon("companions", "icon-plane", 23, 22, "Авиаперелет")
                li.companions__transportation-item.companions__transportation-item--car(data-status=item.transport[1].statusAttr)
                  +transportation-icon("companions", "icon-bus", 18, 20, "Автотранспорт")
